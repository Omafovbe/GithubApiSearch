<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/langQry"
        android:layout_marginEnd="@dimen/mRightBtm"
        android:layout_marginStart="@dimen/mLeftTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editLang"
        android:inputType="textAutoComplete|textShortMessage|textAutoCorrect"
        />
    <EditText
        android:id="@+id/locateQry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mRightBtm"
        android:layout_marginStart="@dimen/mLeftTop"
        android:hint="@string/editLocate"
        android:inputType="textAutoComplete|textShortMessage|textAutoCorrect|textCapSentences"
        />

</LinearLayout>